<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="Hobbies"
        android:textColor="#000"
        android:textSize="35dp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/hobbies1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/material_dynamic_primary70"
        android:onClick="btnNext"
        android:text="Movie"
        android:textColor="@color/black"
        tools:ignore="MissingClass" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/hobbies2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hobbies1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/material_dynamic_primary70"
        android:onClick="btnNext"
        android:text="Reading"
        android:textColor="@color/material_dynamic_primary80"
        tools:ignore="MissingClass" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/hobbies3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hobbies2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/material_dynamic_primary70"
        android:textColor="@color/material_dynamic_primary80"
        android:text="Playing Games"
        android:onClick="btnNext"
        tools:ignore="MissingClass" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/hobbies4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hobbies3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/material_dynamic_primary70"
        android:textColor="@color/material_dynamic_primary80"
        android:text="Travelling"
        android:onClick="btnNext"
        tools:ignore="MissingClass" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/hobbies5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hobbies4"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/material_dynamic_primary70"
        android:text="Cooking"
        android:onClick="btnNext"
        android:textColor="@color/material_dynamic_primary80"
        tools:ignore="MissingClass" />
</RelativeLayout>
